---
import SiteLayout from "src/layouts/SiteLayout.astro";
import { Button } from "@/components/ui/button";
---

<SiteLayout>
  <section
    class="flex flex-col items-center justify-center px-4 py-20 text-center bg-emerald-50/50"
  >
    <p class="text-2xl font-bold text-center text-emerald-800 mb-10">
      Book a Lesson
    </p>
    <div class="mb-10">
      <div class="grid grid-cols-3 gap-4 text-left md:text-center">
        <h3 class="col-span-1 text-emerald-800 font-bold text-xl">Email</h3>
        <p class="col-span-2">info@thegolftutor.ca</p>
        <h3 class="col-span-1 text-emerald-800 font-bold text-xl">Cell</h3>
        <p class="col-span-2">(+1) 905-330-7104</p>
      </div>
    </div>
    <Button size="lg">
      <a href="mailto:info@thegolftutor.ca"> Send email </a>
    </Button>
  </section>
</SiteLayout>
