    <title>Judi Grebenc Golf</title>
  </head>
  <body class="text-neutral-900 font-sans">
    
    <!-- Header -->
    <header class="py-4 px-3 md:py-8 md:px-6 text-center bg-white shadow-md sticky top-0 z-50">
	  <div class="flex justify-center items-center gap-4">
	  	<img class="w-24" src="/jg-golf/golf.svg"/>
      	<h1 class="text-2xl md:text-4xl font-bold text-blue-500 pt-2">Judi Grebenc Golf</h1>
	  </div>
      <p class="text-md mt-2 text-neutral-600 italic">Empowering women through golf.</p>
    </header>
	<!-- About Section -->
    <section class="py-20 px-6 bg-white">
      <div class="max-w-4xl mx-auto text-center">
		<div class="flex flex-col md:flex-row gap-10 items-center">
			<div class="w-1/2">
				<Card>
					<CardContent>
						<br />
						<br />
						<br />
